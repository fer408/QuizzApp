<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ScreenActivities.ScreenOneActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/question_one"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Believing in UFO's"
        android:id="@+id/question1_checkbx"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onCheckBoxClicked"/>

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Having Wild Theories"
        android:id="@+id/question1_checkbx2"
        android:layout_below="@+id/question1_checkbx"
        android:layout_centerHorizontal="true"
        android:onClick="onCheckBoxClicked"/>

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Wearing Aluminum Paper Hats"
        android:id="@+id/question1_checkbx3"
        android:layout_below="@+id/question1_checkbx2"
        android:layout_centerHorizontal="true"
        android:onClick="onCheckBoxClicked"/>

    <CheckBox
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Beign Insane"
        android:id="@+id/question1_checkbx4"
        android:onClick="onCheckBoxClicked"
        android:layout_below="@+id/question1_checkbx3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@drawable/crazy"
        android:id="@+id/imageView2"
        android:layout_above="@+id/question1_checkbx"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Main"
        android:id="@+id/main1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_above="@+id/main1"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
